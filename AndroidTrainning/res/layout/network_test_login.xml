<TextView
    	android:id="@+id/tv_result"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="resutl"/>

<Button
    	android:id="@+id/btn_qq_login_broadcast"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/qq_login_btn_selector"
        android:textColor="@color/color_white"
        android:text="登录,BroadCast处理"/>
</LinearLayout>