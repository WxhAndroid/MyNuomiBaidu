<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="qq_setting_block">
        <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_margin">10dp</item>
       <item name="android:orientation">vertical</item>
       <item name="android:background">@drawable/qq_setting_block</item>
    </style>
    
    <style name="qq_setting_top_style">
       
    </style>

    <style name="qq_setting_center_style">
         <item name="android:onClick">onClick</item>
        <item name="android:background">@drawable/qq_setting_item_center_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
   <style name="qq_setting_bottom_style">
        <item name="android:onClick">onClick</item>
        <item name="android:background">@drawable/qq_setting_item_bottom_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
   <style name="qq_setting_divider_style">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">0.5dp</item>
       <item name="android:layout_marginBottom">5dp</item>
       <item name="android:layout_marginTop">5dp</item>
       <item name="android:background">#efefef</item>
    </style>
   
    <style name="qq_setting_key_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style> 
    
    <style name="qq_setting_value_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style> 
    
    <style name="qq_setting_right_arrow_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:src">@drawable/right_arrow_1</item>
    </style> 
    
</resources>
