<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:orientation="vertical" >

    <!-- 头部 开始 -->

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        tools:ignore="UselessParent" >

        <ImageView
            android:id="@+id/nuomi_top_fourth"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_launcher_nuomi"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/more_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/nuomi_top_fourth"
            android:text="我的"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_sao_more_fourth"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/icon_nav_saoyisao_normal" />
    </RelativeLayout>
    <!-- 头部 结束 -->


    <!-- 团购提醒 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tx_notify_tuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:text="团购评价提醒" />

        <CheckBox
            android:id="@+id/cb_notify_tuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tx_wifi_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:layout_below="@+id/tx_notify_tuan"
            android:text="仅Wi-Fi下显示图片" />

        <CheckBox
            android:id="@+id/cb_wifi_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb_notify_tuan"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <!-- 分享设置 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tx_show_img_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="分享设置"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_share_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/web_forward_disable" />
    </RelativeLayout>

    <!-- 关于我们 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tx_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="关于我们"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/web_forward_disable" />
    </RelativeLayout>

    <!-- 邀请好友 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tx_invite_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="邀请好友"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_invite_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/web_forward_disable" />
    </RelativeLayout>

    <!-- 意见反馈 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tx_suggestion_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="意见反馈"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_suggestion_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/web_forward_disable" />
    </RelativeLayout>

    <!-- 精品应用 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/tx_high_quality_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="精品应用"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_high_quality_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/web_forward_disable" />
    </RelativeLayout>

    <!-- 清除缓存 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#CCCCCC"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <Button
            android:id="@+id/btn_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="清除缓存"
            android:textColor="@color/red" />
    </LinearLayout>

</LinearLayout>