<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 内容开始 -->

    <LinearLayout
        android:id="@+id/ll_content_home"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/fl_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >
        </FrameLayout>
    </LinearLayout>

    <!-- 内容结束 -->


    <!-- 底部开始 -->
    <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:paddingTop="5dp"
        tools:ignore="Orientation" >

        <Button
            android:id="@+id/btn_home"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/tab_ic_home_highlight"
            android:text="团购"
            android:textColor="@color/red2" />

        <Button
            android:id="@+id/btn_near"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/tab_ic_nearby_normal"
            android:text="附近"
            android:textColor="@color/black2" />

        <Button
            android:id="@+id/btn_mine"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/tab_ic_mine_normal"
            android:text="我的"
            android:textColor="@color/black2" />

        <Button
            android:id="@+id/btn_more"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/tab_ic_more_normal"
            android:text="更多"
            android:textColor="@color/black2" />
    </LinearLayout>
    <!-- 底部结束 -->

</LinearLayout>